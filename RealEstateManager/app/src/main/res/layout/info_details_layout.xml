<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:id="@+id/surface_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/surface_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/baseline_settings_overscan_black_18dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/surface_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Surface"
                        android:textSize="@dimen/title_text_size"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/surface_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/content_text_size"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/surface_layout"
        android:id="@+id/rooms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rooms_img"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/baseline_home_black_18dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rooms_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/titleColor"
                android:textSize="@dimen/title_text_size"
                android:layout_gravity="center_vertical"
                android:text="Number of rooms"/>

            <TextView
                android:id="@+id/rooms_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/content_text_size"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rooms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bathrooms_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/rooms_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_hot_tub_black_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bathrooms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/bathrooms_img"
                        app:layout_constraintTop_toBottomOf="@id/rooms_text"
                        app:layout_constraintTop_toTopOf="@id/bathrooms_img"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:textSize="@dimen/title_text_size"
                        android:text="Number of bathrooms"/>

                    <TextView
                        android:id="@+id/bathrooms_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/bathrooms_img"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/content_text_size"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bedrooms_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_hotel_black_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bedrooms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:textSize="@dimen/title_text_size"
                        android:text="Number of bedrooms"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/bedrooms_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/content_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>



</android.support.constraint.ConstraintLayout>