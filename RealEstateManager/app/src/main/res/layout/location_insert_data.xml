<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_place_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/location_img"
        app:layout_constraintTop_toBottomOf="@id/location_title"
        app:layout_constraintTop_toTopOf="@id/location_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Location"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/location_edit_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:hint="number and name of the road"
        android:inputType="text"/>
    <EditText
        android:id="@+id/location_edit_city_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_edit_text_edit"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:hint="city"
        android:textSize="15sp"
        android:maxLines="1"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/location_edit_zc_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="zip code"
        android:inputType="number"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/location_edit_city_text_edit"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/location_edit_state_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_edit_zc_text_edit"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:hint="state"
        android:textSize="15sp"
        android:maxLines="1"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/location_edit_country_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_edit_state_text_edit"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:hint="country"
        android:textSize="15sp"
        android:maxLines="1"
        android:inputType="text"
        />

</android.support.constraint.ConstraintLayout>