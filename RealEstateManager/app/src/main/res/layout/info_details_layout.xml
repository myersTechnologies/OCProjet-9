<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/surface_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/baseline_settings_overscan_black_18dp"/>

    <TextView
        android:id="@+id/surface_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Surface"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/surface_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/surface_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/rooms_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/surface_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_home_black_18dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/rooms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/rooms_img"
        app:layout_constraintTop_toBottomOf="@id/surface_text"
        app:layout_constraintTop_toTopOf="@id/rooms_img"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Number of rooms"/>

    <TextView
        android:id="@+id/rooms_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rooms_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/bathrooms_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rooms_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_hot_tub_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/bathrooms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bathrooms_img"
        app:layout_constraintTop_toBottomOf="@id/rooms_text"
        app:layout_constraintTop_toTopOf="@id/bathrooms_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Number of bathrooms"/>

    <TextView
        android:id="@+id/bathrooms_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bathrooms_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/bedrooms_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bathrooms_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_hotel_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/bedrooms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bedrooms_img"
        app:layout_constraintTop_toBottomOf="@id/bathrooms_title"
        app:layout_constraintTop_toTopOf="@id/bedrooms_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Number of bedrooms"/>

    <TextView
        android:id="@+id/bedrooms_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bedrooms_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bedrooms_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_place_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/location_img"
        app:layout_constraintTop_toBottomOf="@id/location_title"
        app:layout_constraintTop_toTopOf="@id/location_img"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Location"/>

    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_text"
        android:text="Description"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>


</android.support.constraint.ConstraintLayout>