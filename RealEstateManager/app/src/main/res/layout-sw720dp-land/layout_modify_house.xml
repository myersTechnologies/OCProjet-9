<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/house_name_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_edit_color_black_24"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="@dimen/title_text_size"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="5dp"
                        android:background="@color/titleColor"
                        />
                </android.support.v7.widget.CardView>


            <Spinner
                android:id="@+id/name_edit_text_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/content_text_size"
                android:gravity="center" />
            </LinearLayout>

        </LinearLayout>


   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/house_description_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/baseline_settings_overscan_black_18dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="10dp">
               <TextView
                   android:id="@+id/surface_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Surface"
                   android:background="@color/titleColor"
                   android:textSize="@dimen/title_text_size"
                   android:textColor="@android:color/white"
                   android:layout_marginTop="5dp"
                   />

           </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/surface_edit_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/content_text_size"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:backgroundTint="@color/colorPrimaryDark"/>
       </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rooms_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_home_black_18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/rooms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:textSize="@dimen/title_text_size"
                        android:text="Number of rooms"/>
                </android.support.v7.widget.CardView>


                <EditText
                    android:id="@+id/rooms_edit_text_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bathrooms_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
               android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hot_tub_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/bathrooms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:textSize="@dimen/title_text_size"
                        android:text="Number of bathrooms"/>
                </android.support.v7.widget.CardView>


                <EditText
                    android:id="@+id/bathrooms_edit_text_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bedrooms_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hotel_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/bedrooms_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@color/titleColor"
                        android:textSize="@dimen/title_text_size"
                        android:text="Number of bedrooms"/>
                </android.support.v7.widget.CardView>


                <EditText
                    android:id="@+id/bedrooms_edit_text_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/content_text_size"
                    android:inputType="number"
                    android:maxLines="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    />
            </LinearLayout>

        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/price_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:background="@color/titleColor"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size"
            android:layout_marginTop="5dp" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/price_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:hint="Price"
        android:textSize="@dimen/content_text_size"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789,"
        android:maxLines="1"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        />
</LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>