<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/agent_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:text="Agent en charge"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/agent_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/agent_text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/agent_text_neame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/agent_text_title"
        android:layout_marginLeft="80dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/agent_avatar"
        android:textSize="15sp"/>



</android.support.constraint.ConstraintLayout>